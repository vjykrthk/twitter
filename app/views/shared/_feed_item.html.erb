<li id="<%= feed_item.id %>">
	<%= link_to gravatar_for(feed_item.user, size:50), feed_item.user %>	
	<span class="user"><%= link_to feed_item.user.name, feed_item.user %></span>
	<span class="content"><%= feed_item.content %></span>	
	<span class="timestamp"><%= time_ago_in_words(feed_item.created_at) %></span>
	<% if correct_user(feed_item.user) %> 
	<%= link_to "delete", micropost_path(feed_item), method: :delete, data: { confirm:"Are you sure?"}, title:feed_item.content  %>
	<% end %>
</li>