<% provide(:title, 'Sign Up') %>
<div class="row">
	<div class="span6 offset3">
		<h2>Sign Up</h2>
		<%= render 'shared/form_errors' %>
		<%= form_for @user do |f| %>
		<%= f.label :name%>
		<%= f.text_field :name%>
		<%= f.label :email%>
		<%= f.text_field :email %>
		<%= f.label :password %>
		<%= f.password_field :password %>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %></br>
		<%= f.submit "Create new user" %>
		<% end %>
	</div>
</div>

